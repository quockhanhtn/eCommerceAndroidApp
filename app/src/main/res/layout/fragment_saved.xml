<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SavedFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <Button
        android:id="@+id/button_show_bottom_sheet"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/bg_button_round"
        android:text="Show sheet"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:weightSum="3"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/button_show_bottom_sheet">

      <Button
          android:id="@+id/button_show_success"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight="1"
          android:gravity="center"
          android:background="@drawable/bg_button_success"
          android:text="Success"
          android:textColor="@color/colorWhite"
          android:textSize="15sp" />

      <Button
          android:id="@+id/button_show_warning"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight="1"
          android:gravity="center"
          android:background="@drawable/bg_button_warning"
          android:text="Alert"
          android:textColor="@color/colorWhite"
          android:textSize="15sp" />

      <Button
          android:id="@+id/button_show_error"
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight="1"
          android:gravity="center"
          android:background="@drawable/bg_button_error"
          android:text="Error"
          android:textColor="@color/colorWhite"
          android:textSize="15sp" />

    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>